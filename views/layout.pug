doctype html
html
  head
    title= 'Datasaurus'
    meta(name="viewport", content="width=device-width")
    script(async='true', type='text/javascript',src=`https://maps.googleapis.com/maps/api/js?key=${process.env.GOOGLE_MAPS_KEY}`)
    if process.env.NODE_ENV == 'production'
      link(rel='stylesheet', href='/main.css')
      if process.env.HUB_SPOT_ID
        script(type='text/javascript', async='', defer='', src=`//js.hs-scripts.com/${process.env.HUB_SPOT_ID}.js`)
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css')
    //- Meta
    meta(name='description' content='Datasaurus')
    //- Meta -Facebook
    meta(property='og:title' content='Datasaurus')
    meta(property='og:description' content='Unearthing buried data')
    meta(property='og:image' content=`${baseUrl}/shareable-facebook.png?0001`)
    meta(property='og:image:height' content='630')
    meta(property='og:image:width' content='1200')
    meta(property='og:url' content='https://datasaurus.org/')
    //- Meta - Twitter
    meta(name='twitter:card' content='summary_large_image')
    meta(name='twitter:site' content='@MobilityLabs')
    meta(name='twitter:title' content='Datasaurus')
    meta(name='twitter:description' content='Unearthing buried data')
    meta(name='twitter:image' content=`${baseUrl}/shareable-twitter.png?0001`)
    //- Favicon
    link(rel="apple-touch-icon", sizes="180x180", href="/apple-touch-icon.png?v=69kmvXgOgB")
    link(rel="icon", type="image/png", sizes="32x32", href="/favicon-32x32.png?v=69kmvXgOgB")
    link(rel="icon", type="image/png", sizes="16x16", href="/favicon-16x16.png?v=69kmvXgOgB")
    link(rel="manifest", href="/manifest.json?v=69kmvXgOgB")
    link(rel="mask-icon", href="/safari-pinned-tab.svg?v=69kmvXgOgB", color="#4990e2")
    link(rel="shortcut icon", href="/favicon.ico?v=69kmvXgOgB")
    meta(name="apple-mobile-web-app-title", content="Datasaurus")
    meta(name="application-name", content="Datasaurus")
    meta(name="theme-color", content="#4990e2")

  body
    block content
    script(type='text/javascript', src='/app.bundle.js')
